<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout android:id="@+id/container"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<com.codingbuffalo.aerialdream.SimplePlayer
		android:id="@+id/player2"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_centerInParent="true"
		app:layout_aspectRatio="178%"
		app:layout_widthPercent="100%"/>
	
	<com.codingbuffalo.aerialdream.SimplePlayer
		android:id="@+id/player1"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_centerInParent="true"
		app:layout_aspectRatio="178%"
		app:layout_widthPercent="100%"/>
	
	<TextView
		android:id="@+id/loading"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="bottom|end"
		android:padding="40dp"
		android:background="#000"
		android:text="@string/loading_aerial"
		android:textColor="#fff"
		android:textSize="30sp"
		android:alpha="1.5"/>

	<ProgressBar
        android:id="@+id/progress"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:progress="0"
        app:layout_marginTopPercent="99%"
        app:layout_marginLeftPercent="0%"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>

	<TextView
		android:id="@+id/location_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="24sp"
		android:fontFamily="sans-serif-thin"
		android:alpha="0.5"
		app:layout_marginTopPercent="93%"
		app:layout_marginLeftPercent="5%" />

</android.support.percent.PercentRelativeLayout>
